@using TPBlog.Core.SeedWorks.Constants
﻿@{
    ViewData["Title"] = "Post List By user ";
    ViewData["Description"] = "Post List";

}
@model ListPostByUserViewModel
<!-- Page Header-->
<header class="masthead" style="background-image: url('/assets/img/home-bg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>List Post </h1>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Main Content-->
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-12 col-lg-12 col-xl-12">
            @if (TempData[SystemConstants.FormSuccessMsg] != null)
            {
                <div class="alert alert-success">
                    @TempData[SystemConstants.FormSuccessMsg]
                </div>
            }
            <table class="table table-borderless">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>category</th>
                        <th>Created Date</th>
                        <th>ViewCount</th>
                        <th>Status</th>


                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model.Posts.Results)
                    {
                        <tr>
                            <td><a href="@UrlConsts.CreatePost?id=@item.Id">@item.Name</a></td>
                            <td>@item.CategoryName</td>
                            <td>@item.DateCreated</td>
                            <td>@item.ViewCount</td>
                            <td>@item.Status</td>

                            <td>
                                <a class=" btn btn-success" href="@UrlConsts.SendApprove">Send to approval</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <!-- Pager-->
            @(await Component.InvokeAsync("Pager", Model.Posts))
        </div>
    </div>
</div>