@using TPBlog.Core.SeedWorks.Constants
@{
    ViewData["Title"] = "change profile";
    ViewData["Description"] = "change Profile";

}
@model ChangeProfileViewModel
<!-- Page Header-->
<header class="masthead" style="background-image: url('/assets/img/home-bg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>change profile</h1>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Main Content-->
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            <form asp-action="ChangeProfile" asp-controller="Profile" method="post" class="row g-12">
                <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                @if (TempData[SystemConstants.FormSuccessMsg] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>

                }
                <div class="col-md-4">
                    <label for="firstName" class="form-label">First name</label>
                    <input type="text" class="form-control is-valid" asp-for="FirstName" id="firstName" required>
                    <span class="invalid-feedback" asp-validation-for="FirstName">               </span>
                </div>
                <div class="col-md-6">
                    <label for="lastName" class="form-label">Last name</label>
                    <input type="text" class="form-control " asp-for="LastName" id="lastName" required>
                    <span class="invalid-feedback" asp-validation-for="LastName">               </span>
                </div>
                <div class="col-12">
                    <button class="btn btn-primary" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
